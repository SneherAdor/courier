{
    "name": "millat/desh-courier",
    "description": "Unified multi-courier SDK for Bangladeshi courier services - Works with plain PHP, Laravel, and WordPress",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Desh Courier Team",
            "email": "dev@deshcourier.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0",
        "psr/log": "^3.0",
        "psr/simple-cache": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "mockery/mockery": "^1.6"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-unit": "phpunit --testsuite=Unit",
        "test-integration": "phpunit --testsuite=Integration",
        "test-feature": "phpunit --testsuite=Feature",
        "cs-check": "phpcs --standard=PSR12 src tests",
        "cs-fix": "phpcbf --standard=PSR12 src tests"
    },
    "autoload": {
        "psr-4": {
            "Millat\\DeshCourier\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Millat\\DeshCourier\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
